pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Prepare') {
            steps {
                // Delete and recreate the junit_report.xml file to ensure a clean start
                sh 'rm -f junit_report.xml'
                sh 'touch junit_report.xml'
                echo 'JUnit report file prepared.'
            }
        }

        stage('Checkout') {
            steps {
                // Checks out the source code from the Git repository
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install npm dependencies
                sh 'npm install'
            }
        }

        stage('Run Gauge Tests') {
            steps {
                // Run Gauge tests
                sh 'export PATH=$PATH:/opt/homebrew/bin && gauge run specs'
            }
        }

        stage('Generate JUnit Report') {
            steps {
                // Execute the script to parse the HTML report and generate the JUnit report
                sh 'node parseHtmlReport.js'
            }
        }
    }

    post {
        always {
            // Publish JUnit test results
            junit 'junit_report.xml'
            echo 'Pipeline execution is complete.'
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
