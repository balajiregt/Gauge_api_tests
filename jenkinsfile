pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Prepare') {
            steps {
                // Clear the junit_report.xml file or create an empty one
                sh 'echo "" > junit_report.xml'
                echo 'JUnit report file cleared or created.'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Gauge Tests') {
            steps {
                sh 'export PATH=$PATH:/opt/homebrew/bin && gauge run specs'
            }
            post {
                always {
                    sh 'node parseHtmlReport.js'
                }
            }
        }
    }

    post {
        always {
            // Publish JUnit test results
            junit 'junit_report.xml'

            echo 'Pipeline execution is complete.'
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
