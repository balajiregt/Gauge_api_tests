pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Prepare') {
            steps {
                // Delete and recreate the junit_report.xml file to ensure a clean start
                sh 'rm -f junit_report.xml'
                sh 'touch junit_report.xml'
                echo 'JUnit report file prepared.'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Gauge Tests') {
            steps {
                sh 'export PATH=$PATH:/opt/homebrew/bin && gauge run specs'
            }
            post {
                always {
                    sh 'node parseHtmlReport.js'
                    // Check if the junit_report.xml file is generated and not empty
                    script {
                        if (sh(script: "test -s junit_report.xml", returnStatus: true) == 0) {
                            echo 'JUnit report file is generated and not empty.'
                        } else {
                            echo 'JUnit report file is missing or empty. Check parseHtmlReport.js script.'
                            // Optional: Handle error or exit
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            junit 'junit_report.xml'
            echo 'Pipeline execution is complete.'
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
