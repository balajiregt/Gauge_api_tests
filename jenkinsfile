pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Gauge Tests') {
            steps {
                sh 'export PATH=$PATH:/opt/homebrew/bin && gauge run specs'
            }
            post {
                always {
                    sh 'node parseHtmlReport.js'
                    // Debug: List files in the current directory
                    sh 'ls -la'
                }
            }
        }
    }

    post {
        always {
            // Attempt to publish JUnit test results
            junit 'junit_report.xml'

            // Debug: List files again to confirm if junit_report.xml still exists
            sh 'ls -la'

            // Clean up the junit_report.xml file after publishing
            sh 'rm -f junit_report.xml'
            echo 'Cleaned up junit_report.xml'

            echo 'Pipeline execution is complete.'
        }

        success {
            echo 'Pipeline succeeded!'
        }

        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
