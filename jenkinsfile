pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Prepare') {
            steps {
                // Delete the junit_report.xml file to ensure a clean start
                sh 'rm -f junit_report.xml'
                echo 'JUnit report file removed.'

                // Create a new, empty junit_report.xml file
                sh 'touch junit_report.xml'
                echo 'New JUnit report file created.'
            }
        }

        stage('Checkout') {
            steps {
                // Checks out the source code from the Git repository
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install npm dependencies
                sh 'npm install'
            }
        }

        stage('Run Gauge Tests') {
            steps {
                // Run Gauge tests
                sh 'export PATH=$PATH:/opt/homebrew/bin && gauge run specs'
            }
            post {
                always {
                    // Execute script to parse HTML report and generate JUnit XML
                    sh 'node parseHtmlReport.js'
                }
            }
        }
    }

    post {
        always {
            // Publish JUnit test results
            junit 'junit_report.xml'

            // Action to perform after the pipeline execution, regardless of the result
            echo 'Pipeline execution is complete.'
        }

        success {
            // Actions to perform if the pipeline succeeds
            echo 'Pipeline succeeded!'
        }

        failure {
            // Actions to perform if the pipeline fails
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
